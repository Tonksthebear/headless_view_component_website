
<div class="prose">
  <h1>Dropdown Menu</h1>
</div>

<div class="prose mt-4 mb-6">
  <p class="text-base/7">Menus offer an easy way to build custom, accessible dropdown components with robust support for keyboard navigation.</p>
</div>

<div id="demo" class="relative mt-8 mb-12 flex flex-col items-center justify-center overflow-hidden h-[400px]">
  <%= render Headless::Tab::GroupComponent.new(class: "h-full w-full") do |tab_group| %>
    <%= tab_group.with_tab_list(class: "flex gap-4") do |tab_list| %>
      <%= tab_group.with_tab(class: "rounded-full py-1 px-3 text-sm/6 font-semibold text-white focus:outline-none data-[selected]:bg-white/10 data-[hover]:bg-white/5 data-[selected]:data-[hover]:bg-white/10 data-[focus]:outline-1 data-[focus]:outline-white") do |tab| %>
        Preview
      <% end %>
      <%= tab_group.with_tab(class: "rounded-full py-1 px-3 text-sm/6 font-semibold text-white focus:outline-none data-[selected]:bg-white/10 data-[hover]:bg-white/5 data-[selected]:data-[hover]:bg-white/10 data-[focus]:outline-1 data-[focus]:outline-white") do |tab| %>
        Code
      <% end %>
    <% end %>
    <%= tab_group.with_panels(class: "h-full w-full") do |tab_panels| %>
      <%= tab_group.with_tab_panel(class: "mt-3 h-full w-full") do |tab_panel| %>
        <div class="relative h-full bg-white/5">
          <div class="absolute inset-[35%] block rounded-full bg-white/15 blur-2xl"></div>
          <div class="relative flex min-h-full w-full flex-col items-center justify-center">
            <%= render Headless::MenuComponent.new(class: "absolute top-24 w-52 text-right") do |menu| %>
              <%= menu.with_button(class: "inline-flex items-center gap-2 rounded-md bg-zinc-800 py-1.5 px-3 text-sm/6 font-semibold text-white shadow-inner shadow-white/10 focus:outline-none data-[hover]:bg-zinc-700 data-[open]:bg-zinc-700 data-[focus]:outline-1 data-[focus]:outline-white") do |button| %>
                Options
                <%= button.with_icon "chevron-down", class: "size-4 fill-white/60" %>
              <% end %>

              <%= menu.with_items(anchor: "bottom right", class: "w-52 origin-top-right rounded-xl border border-white/5 bg-white/5 p-1 text-sm/6 text-white transition duration-100 ease-out [--anchor-gap:--spacing(1)] focus:outline-none data-[closed]:scale-95 data-[closed]:opacity-0") do |items| %>
                <%= items.with_item_button(class: "group flex w-full items-center gap-2 rounded-lg py-1.5 px-3 data-[focus]:bg-white/10") do |item| %>
                  <%= item.with_icon "pencil", class: "size-4 fill-white/30" %>
                  Edit
                  <span class="ml-auto hidden font-sans text-xs text-white/50 group-data-[focus]:inline">⌘E</span>
                <% end %>
      
                <%= items.with_item_button(class: "group flex w-full items-center gap-2 rounded-lg py-1.5 px-3 data-[focus]:bg-white/10") do |item| %>
                  <%= item.with_icon "document-duplicate", class: "size-4 fill-white/30" %>
                  Duplicate
                  <span class="ml-auto hidden font-sans text-xs text-white/50 group-data-[focus]:inline">⌘D</span>
                <% end %>

                <%# items.with_separator %>

                <%= items.with_item_button(class: "group flex w-full items-center gap-2 rounded-lg py-1.5 px-3 data-[focus]:bg-white/10") do |item| %>
                  <%= item.with_icon "archive-box", class: "size-4 fill-white/30" %>
                  Archive
                  <span class="ml-auto hidden font-sans text-xs text-white/50 group-data-[focus]:inline">⌘A</span>
                <% end %>

                <%= items.with_item_button(class: "group flex w-full items-center gap-2 rounded-lg py-1.5 px-3 data-[focus]:bg-white/10") do |item| %>
                  <%= item.with_icon "trash", class: "size-4 fill-white/30" %>
                  Delete
                  <span class="ml-auto hidden font-sans text-xs text-white/50 group-data-[focus]:inline">⌘T</span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <%= tab_group.with_tab_panel(class: "mt-3 overflow-auto h-full w-full") do |tab_panel| %>
        <pre class="text-sm text-white">
          <code>
            &lt;%= render Headless::MenuComponent.new(class: "relative") do |menu| %>
              &lt;%= menu.with_button(class: "inline-flex items-center gap-2 rounded-md bg-gray-700 px-3 py-2 text-sm font-semibold text-white shadow-sm") do |button| %>
                Options
                &lt;%= button.with_icon "chevron-down", class: "h-5 w-5" %>
              &lt;% end %>

              &lt;%= menu.with_items(class: "absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none") do |items| %>
                &lt;%= items.with_item_button(class: "group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") do |item| %>
                  &lt;%= item.with_icon "pencil", class: "mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" %>
                  Edit
                &lt;% end %>
  
                &lt;%= items.with_item_button(class: "group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") do |item| %>
                  &lt;%= item.with_icon "document-duplicate", class: "mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" %>
                  Duplicate
                &lt;% end %>

                &lt;%= items.with_divider %>

                &lt;%= items.with_item_button(class: "group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") do |item| %>
                  &lt;%= item.with_icon "archive-box", class: "mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" %>
                  Archive
                &lt;% end %>

                &lt;%= items.with_item_button(class: "group flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100") do |item| %>
                  &lt;%= item.with_icon "trash", class: "mr-3 h-5 w-5 text-gray-400 group-hover:text-gray-500" %>
                  Delete
                &lt;% end %>
              &lt;% end %>
            &lt;% end %>
          </code>
        </pre>
      <% end %>
    <% end %>
  <% end %>
</div>

